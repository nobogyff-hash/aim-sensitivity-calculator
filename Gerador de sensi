<script>

/* SENHA */
function verificarSenha(){
    const senhaCorreta = "RKS2026";
    const senhaDigitada = document.getElementById("senha").value;

    if(senhaDigitada === senhaCorreta){
        document.getElementById("login").style.display = "none";
    }else{
        document.getElementById("erro").innerText = "Senha incorreta!";
    }
}

/* DETECTAR APARELHO */
function detectarNivel(){
    let ram = navigator.deviceMemory || 4;
    let cpu = navigator.hardwareConcurrency || 4;

    if(ram <= 3) return "baixo";
    if(ram <= 6) return "medio";
    return "alto";
}

/* GERADOR INTELIGENTE */
function gerar(){

    let nivel = detectarNivel();

    function random(min,max){
        return Math.floor(Math.random()*(max-min+1))+min;
    }

    let geral, redDot, mira2x, mira4x, awm, olhadinha, dpi;

    if(nivel == "baixo"){
        geral = random(165,180);
        redDot = random(155,170);
        mira2x = random(150,165);
        mira4x = random(140,160);
        awm = random(130,150);
        olhadinha = random(175,190);
        dpi = "600 - 700";
    }

    if(nivel == "medio"){
        geral = random(175,195);
        redDot = random(165,185);
        mira2x = random(155,180);
        mira4x = random(145,170);
        awm = random(135,160);
        olhadinha = random(185,200);
        dpi = "700 - 800";
    }

    if(nivel == "alto"){
        geral = random(185,200);
        redDot = random(175,195);
        mira2x = random(165,190);
        mira4x = random(155,180);
        awm = random(145,170);
        olhadinha = random(190,200);
        dpi = "800 - 900";
    }

    document.getElementById("resultado").innerHTML = `
        <h3>üî• CONFIGURA√á√ÉO GERADA üî•</h3>
        Geral: ${geral} <br>
        Red Dot: ${redDot} <br>
        Mira 2x: ${mira2x} <br>
        Mira 4x: ${mira4x} <br>
        AWM: ${awm} <br>
        Olhadinha: ${olhadinha} <br><br>
        DPI Recomendada: ${dpi} <br><br>
        <strong>Foco em subida r√°pida e precis√£o üéØ</strong>
    `;
}

</script>

